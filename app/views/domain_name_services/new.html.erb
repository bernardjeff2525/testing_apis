<div class="container-fluid">
  <ol class="breadcrumb">
    <li><%= link_to "Home", root_path %></li>
    <li class="active">Create DNS</li>
  </ol>
  <%= render "devise/shared/error_messages", resource: @domain_name_service %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Create New Domain Name Service</h3>
    </div>
    <div class="panel-body">
      <h2 align="center">DNS Information</h2><br>
      <div class="row">
        <div class="col-xs-12">
          <%= form_for(@domain_name_service, :html => {class:"form-horizontal", role:"form"}) do |f| %>
            <div class="form-group">
              <div class="control-label col-sm-2">
                <%= f.label :dns %>
              </div>
              <div class="control-label col-sm-8">
                <%= f.text_field :dns, autofocus: true, autocomplete: "dns", class: "form-control", placeholder:"Enter Domain Name Service" %>
              </div>
            </div>
            <div class="form-group">
              <div class="control-label col-sm-2">
                <%= f.label :status %>
              </div>
              <div class="control-label col-sm-4">
                <div class="pull-left">
                  <%= f.radio_button :status, :on %>
                  <%= label :status, 'On' %>
                  <%= f.radio_button :status, :off %>
                  <%= label :status, 'Off' %>
                </div>
              </div>
              <div class="control-label col-sm-2">
                <%= f.label :https %>
              </div>
              <div class="control-label col-sm-4">
                <div class="pull-left">
                  <%= f.radio_button :https, true %>
                  <%= label :https, 'True' %>
                  <%= f.radio_button :https, false %>
                  <%= label :https, 'False' %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit "Create", class:"btn btn-primary btn-lg" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

