<div class="panel-body">
  <h2 align="center">DNS Information</h2><br>
  <div class="row">
    <div class="col-xs-12">
      <%= form_for domain_name_service, html: {class: 'form-horizontal', role: 'form'} do |f| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :url %>
          </div>
          <div class="control-label col-sm-8">
            <%= f.text_field :url, autofocus: true, autocomplete: 'Url', class: 'form-control', placeholder: 'Enter URL' %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :status %>
          </div>
          <div class="control-label col-sm-4">
            <div class="pull-left">
              <%= f.radio_button :status, :on %>
              <%= label :status, 'On' %>
              <%= f.radio_button :status, :off %>
              <%= label :status, 'Off' %>
            </div>
          </div>
          <div class="control-label col-sm-2">
            <%= f.label :https %>
          </div>
          <div class="control-label col-sm-4">
            <div class="pull-left">
              <%= f.radio_button :https, true %>
              <%= label :https, 'True' %>
              <%= f.radio_button :https, false %>
              <%= label :https, 'False' %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>